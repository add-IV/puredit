{
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "target": "esnext",
    "module": "esnext",
    "useDefineForClassFields": false,
    "moduleResolution": "node",
    "isolatedModules": true,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true
  },
  "include": ["*.d.ts", "*.ts", "*.svelte"],
  "exclude": ["node_modules"]
}
