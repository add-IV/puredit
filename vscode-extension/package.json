{
  "name": "@puredit/vscode-extension",
  "displayName": "puredit",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Puredit",
      "type": "object",
      "properties": {
        "puredit.declarativeProjectionDescriptors": {
          "type": "array",
          "default": [],
          "description": "Enter absolute paths to your .ext.json files containing declaratively defined projections.",
          "items": {
            "type": "string"
          }
        },
        "puredit.enabledPackages.py-polars": {
          "type": "boolean",
          "scope": "application",
          "default": true,
          "description": "Enable projections for Polars."
        },
        "puredit.enabledPackages.py-pytorch": {
          "type": "boolean",
          "scope": "application",
          "default": true,
          "description": "Enable projections for PyTorch."
        }
      }
    },
    "jsonValidation": [
      {
        "fileMatch": "*.ext.json",
        "url": "./extension/declarativeProjectionSchema.json"
      }
    ],
    "commands": [
      {
        "command": "puredit.reloadProjectionalEditor",
        "title": "Reload Projectional Editor"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "puredit.reloadProjectionalEditor",
          "group": "navigation",
          "when": "projectionalEditorRunning"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "puredit.PythonEditor",
        "displayName": "Projectional Python Editor",
        "priority": "option",
        "selector": [
          {
            "filenamePattern": "*.py"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "@types/vscode": "^1.83.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.50.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "vscode-json-languageservice": "^5.3.11"
  }
}
